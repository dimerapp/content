{
  "name": "@dimerapp/content",
  "version": "2.0.0",
  "description": "Content module for rendering markdown via Edge",
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "node japaFile.js",
    "clean": "del build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "commit": "git-cz",
    "release": "np",
    "version": "npm run build",
    "sync-labels": "github-label-sync --labels ./node_modules/@adonisjs/mrm-preset/gh-labels.json null"
  },
  "keywords": [
    "dimerapp",
    "markdown"
  ],
  "author": "virk,dimerapp",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/mrm-preset": "^3.0.0",
    "@adonisjs/require-ts": "^2.0.3",
    "@poppinss/dev-utils": "^1.1.1",
    "@types/fs-extra": "^9.0.9",
    "@types/node": "^14.14.37",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "del-cli": "^3.0.1",
    "doctoc": "^2.0.0",
    "edge.js": "^4.0.4",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-adonis": "^1.3.0",
    "eslint-plugin-prettier": "^3.3.1",
    "github-label-sync": "^2.0.0",
    "husky": "^5.2.0",
    "japa": "^3.1.1",
    "mrm": "^2.6.1",
    "np": "^7.4.0",
    "prettier": "^2.2.1",
    "ts-dedent": "^2.1.0",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "doctoc README.md --title='## Table of contents' && git add README.md",
      "commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validateCommit/conventional/validate.js"
    }
  },
  "nyc": {
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ]
  },
  "main": "build/index.js",
  "files": [
    "build/src",
    "build/index.d.ts",
    "build/index.js"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "np": {
    "contents": ".",
    "anyBranch": false
  },
  "dependencies": {
    "@dimerapp/edge": "^2.0.0",
    "@dimerapp/markdown": "^6.0.0",
    "@dimerapp/shiki": "^3.0.0",
    "@poppinss/hooks": "^3.0.2",
    "fs-extra": "^9.1.0",
    "parseurl": "^1.3.3",
    "rev-hash": "^3.0.0"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dimerapp/content.git"
  },
  "bugs": {
    "url": "https://github.com/dimerapp/content/issues"
  },
  "homepage": "https://github.com/dimerapp/content#readme"
}
